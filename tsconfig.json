{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
